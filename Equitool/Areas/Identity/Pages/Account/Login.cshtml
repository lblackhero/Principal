@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar sesión";
}


<div class="row justify-content-center">
    <div class="col-md-auto" id="contenedor-login" style="background-color: #ffffff;">
        <section>
            <form id="account" method="post">
                <br />
                <h1 class="text-center" style="font-size: 2.0rem; font-family: 'ABeeZee', sans-serif; ">@ViewData["Title"]</h1>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" placeholder="alguien@correo.com" style="border: none; border-bottom: 1px outset #80bdff; border-radius: unset;" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" placeholder="Contraseña" style="border: none; border-bottom: 1px outset #80bdff; border-radius: unset;" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group align-content-md-center">
                    <button type="submit" class="btn btn-block btn-outline-primary">Ingresar</button>
                </div>
                <div class="form-group" style="text-align: center;">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword"> ¿Olvidaste tu contraseña?</a>
                    </p>
                    <p>
                        <span class="text-left">¿No tienes una cuenta?</span>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Regístrate</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
 }
