@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar sesión";
}

<div class="container justify-content-center align-items-center">
    <div class="row no-gutters my-5">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto p-4 form__border--boxShadow">
            <section>
                <form id="account" method="post">
                    <h1 class="text-center">@ViewData["Title"]</h1>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email">Correo</label>
                        <input asp-for="Input.Email" class="form-control shadow-none" placeholder="alguien@correo.com" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password">Contraseña</label>
                        <input asp-for="Input.Password" class="form-control shadow-none" placeholder="Contraseña" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group align-content-md-center">
                        <button type="submit" class="btn btn-custom btn-block btn-primary btn-lg rounded-pill">Ingresar</button>
                    </div>
                    <div class="form-group" style="text-align: center;">
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword"> ¿Olvidaste tu contraseña?</a>
                        </p>
                        <p>
                            <span class="text-left">¿No tienes una cuenta?</span>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Regístrate</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
