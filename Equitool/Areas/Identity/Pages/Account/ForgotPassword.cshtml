@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Recuperar contraseña";
}

<div class="container justify-content-center align-items-center">
    <div class="row no-gutters my-5">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto p-3" id="restaurarContraseña">
            <br />
            <h1 class="text-center">@ViewData["Title"]</h1>
            <hr style="border: 1px solid;" />
            <label> Las instrucciones para recuperar tu cuenta se enviarán al correo con el que te registraste</label>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control shadow-none" placeholder="alguien@hotmail.com" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-block btn-outline-primary">Enviar</button>
                <div class="form-group" style="text-align: center;">
                    <br />
                    <p>
                        <a asp-page="./Register">Crear otra cuenta</a>
                    </p>
                    <p>
                        <a  asp-page="./Login">Volver</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
