@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Recuperar contraseña";
}


<div class="row justify-content-center">
    <div class="col-md-auto" style="background-color: #ffffff;" id="contenedor-restaurar_contraseña">
        <br />
        <h1 class="text-center" style="font-size: 2.0rem; font-family: 'ABeeZee', sans-serif;">@ViewData["Title"]</h1>
        <hr style="border: 1px solid;" />
        <label> Las instrucciones para recuperar tu cuenta se enviarán al correo con el que te registraste</label>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" placeholder="alguien@hotmail.com" style="border: none; border-bottom: 1px outset #80bdff; border-radius: unset;" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-block btn-outline-primary">Enviar</button>
            <div class="form-group" style="text-align: center;">
                <br />
                <p>
                    <a asp-page="./Register">Crear otra cuenta</a> 
                </p>
                <p>
                    <a asp-page="./Login">Volver</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
