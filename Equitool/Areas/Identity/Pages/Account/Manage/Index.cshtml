@page
@model IndexModel
@{
    ViewData["Title"] = "Datos";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row justify-content-center">
    <div class="col-md-5">
        <h3 class="text-center">@ViewData["Title"]</h3>
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username">Usuario</label>
                <input asp-for="Username" class="form-control" disabled />
            </div>

        </form>
    </div>
</div>
<br />

<div class="row justify-content-center">
    <div class="col-md-5">
        <h5 class="text-center"> Añadir información</h5>
        <div class="form-group">
            <label asp-for="Input.PhoneNumber">Número de teléfono</label>
            <input asp-for="Input.PhoneNumber" class="form-control" />
            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
        </div>
        <button id="update-profile-button" type="submit" class="btn btn-block btn-outline-info">Guardar</button>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}