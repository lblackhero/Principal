@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrarse";
}

<div class="row justify-content-center">
    <div class="col-md-auto" id="contenedor-formularios" style="background-color: #ffffff;">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <br />
            <h1 class="text-center" style="font-size: 2.0rem; font-family: 'ABeeZee', sans-serif;">@ViewData["Title"]</h1>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" placeholder="alguien@correo.com" style="border: none; border-bottom: 1px outset #80bdff; border-radius: unset" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" placeholder="Contraseña" style="border: none; border-bottom: 1px outset #80bdff; border-radius: unset" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control active" placeholder="Contraseña" style="border: none; border-bottom: 1px outset #80bdff; border-radius: unset" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-block btn-outline-primary">Registrarse</button>
            <br />
            <div class="form-group" style="text-align:center;">
                <p>
                    <span class="text-left">¿Ya tienes una cuenta?</span>
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Acceder</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
