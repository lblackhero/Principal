@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Confirmar registro";
}


@{
    if (@Model.DisplayConfirmAccountLink)
    {
        <div class="container my-4">
            <div class="container">
                <div class="text-center">
                    <img class="img-fluid" src="~/images/confirmar-email.svg" alt="confirmar-registro" height="215" width="307" />
                </div>
            </div>
            <h1 class="text-center responsive-font-example pt-1">@ViewData["Title"]</h1>
            <div class="text-center p-2 p-md-3">
                <p class="lead">
                    ¡Ya casí acabamos, revisa tu bandeja de <b>entrada de Gmail</b> para confirmar tu registro!.
                </p>
            </div>
            <div class="container text-center">
                <div class="row no-gutters">
                    <div class="col-md-12">
                        <a class="btn btn-outline-dark" href="https://accounts.google.com/b/0/AddMailService" role="button" style="text-transform:none" target="_blank">
                            <img width="20" style="margin-bottom:3px; margin-right:5px" alt="Google sign-in" src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Google_%22G%22_Logo.svg/512px-Google_%22G%22_Logo.svg.png" />
                            Ir a Gmail
                        </a>
                    </div>
                </div>
            </div>
        </div>

    }
    else
    {
        <div class="container my-4">
            <div class="container">
                <div class="text-center">
                    <img class="figure-img" src="~/images/confirmar-email.jpg" alt="register-icon" height="240" width="307" />
                </div>
            </div>
            <hr />
            <h1 class="text-center responsive-font-example">@ViewData["Title"]</h1>
            <div class="text-center p-2 p-md-3">
                <p class="lead">
                    ¡Ya casí acabamos, revisa tu bandeja de <b>entrada de Gmail</b> para confirmar tu registro!.
                </p>
            </div>
            <div class="card" style="width: 18rem;">
            </div>
        </div>
    }
}
