<!DOCTYPE html>
<html lang="es-co">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Equitool</title>
    <!-- Bootstrap library -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Datatables CDN -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.11.3/af-2.3.7/b-2.0.1/b-colvis-2.0.1/b-html5-2.0.1/b-print-2.0.1/cr-1.5.4/date-1.1.1/fc-4.0.0/fh-3.2.0/kt-2.6.4/r-2.2.9/rg-1.1.3/rr-1.2.8/sc-2.0.5/sb-1.2.2/sp-1.4.0/sl-1.3.3/datatables.min.css" />
    <!-- Fontawesome CDN -->
    <script src="https://kit.fontawesome.com/f233c04d27.js" crossorigin="anonymous"></script>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-light bg-white navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow p-0" id="nav-container">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
            <img class="ml-xl-5 ml-lg-5 ml-md-5" src="/images/Equitool-logo-pequeño.png" alt="Equitool" title="Equitool" />
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="container">
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <partial name="_LoginPartial" />
                <ul class="navbar-nav flex-grow-1">
                </ul>
            </div>
        </div>
    </nav>

    @if (User.Identity.IsAuthenticated)
    {
        <div class="d-flex" id="wrapper">
            <!-- Sidebar-->
            <div class="d-flex hidden-medium">
                <div class="border-end bg-white container__element--boxShadow hidden-medium" id="sidebar-wrapper">
                    <div class="sidebar-heading border-bottom text-center"> Secciones</div>
                    <div class="list-group list-group-flush text-left">
                        <a class="list-group-item list-group-item-action list-group-item-light p-3" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </a>
                        <a class="list-group-item list-group-item-action list-group-item-light p-3" href="#!">
                            <i class="fas fa-tasks"></i> Gestión
                        </a>
                        <a class="list-group-item list-group-item-action list-group-item-light p-3" href="#!">
                            <i class="far fa-envelope"></i> Email
                        </a>
                        @if (User.IsInRole("Administrador"))
                        {
                            <a class="list-group-item list-group-item-action list-group-item-light p-3" asp-action="Index" asp-controller="Rol">
                                <i class="fas fa-user-tag"></i> Roles
                            </a>
                        }
                    </div>
                </div>
            </div>

            <!-- Navigation menu small screen-->
            <div id="mySidenav" class="sidenav d-inline d-md-none sidenav-hidden">
                <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                <a asp-controller="Home" asp-action="Index"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
                <a href="#"><i class="fas fa-tasks" aria-hidden="true"></i> Gestión</a>
                <a href="#"><i class="far fa-envelope"></i> Email</a>
                @if (User.IsInRole("Administrador"))
                {
                    <a asp-controller="Rol" asp-action="Index"><i class="fas fa-user-tag"></i> Roles</a>
                }
            </div>

            <!-- Back to top arrow -->
            <a id="back-to-top" href="#" class="btn btn-outline-primary border-0 btn-xl back-to-top ml-3 hidden-large" role="button" title="Volver arriba"><i class="fas fa-chevron-up"></i></a>

            <!-- Page content wrapper -->
            <div class="px-0" id="page-content-wrapper">
                <!-- Toggle menu button arrow -->
                <div class="pl-2 pt-2 d-inline hidden-medium float-left" id="containerArrow" role="link" aria-label="name">
                    <a class="btn d-none d-sm-block" id="sidebarToggle" role="button"><i id="icon" class="fa fa-arrow-left"></i></a>
                </div>
                <!-- Menu button small screen-->
                <div class="mt-2 mb-2 d-flex align-content-center justify-content-center">
                    <a id="btnMenu" class="btn btn-custom-2 btn-lg d-inline d-md-none" onclick="openNav()"><i class="fas fa-bars"></i> Menú</a>
                </div>
                <div class="container-fluid">
                    @RenderBody()
                </div>
            </div>
        </div>

        // Eliminar margen cuando este logueado
        <script type="text/javascript">
            document.body.classList.add('m-0');
        </script>

    }
    else
    {
        <!-- Body -->
        <div class="container-fluid px-0">
            <main role="main">
                @RenderBody()
            </main>
            <!-- Back to top arrow -->
            <a id="back-to-top" href="#" class="btn btn-outline-primary border-0 btn-xl mb-5 back-to-top" role="button" title="Volver arriba"><i class="fas fa-chevron-up"></i></a>
        </div>

        <!-- Footer -->
        <footer class="border-top footer text-muted" id="footer">
            <div class="container">
                &copy; 2021 - Equitool - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a>
            </div>
        </footer>
    }

    <!-- Bootstrap library -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- Datatables cdn -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/pdfmake.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.36/vfs_fonts.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.11.3/af-2.3.7/b-2.0.1/b-colvis-2.0.1/b-html5-2.0.1/b-print-2.0.1/cr-1.5.4/date-1.1.1/fc-4.0.0/fh-3.2.0/kt-2.6.4/r-2.2.9/rg-1.1.3/rr-1.2.8/sc-2.0.5/sb-1.2.2/sp-1.4.0/sl-1.3.3/datatables.min.js"></script>
    <!-- Sweetalert2 cdn -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    @RenderSection("Scripts", required: false)

    <script type="text/javascript">


    </script>

</body>
</html>
