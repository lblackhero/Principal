@model Equitool.Models.RoleModel
@{
	@if (this.User.IsInRole("Administrador"))
	{
		<div class="container-fluid">
			<form method="post">
				<div class="row">
					<div class="col-12">
						<div class="input-group">
							<label>Dígite usuario</label>
							<input type="text" placeholder="Dígite correo" required name="CorreoUsuario" />
						</div>
					</div>
					<div class="col-12">
						@foreach (var item in Model.roles)
						{
							<div class="form-check">
								<input class="form-check-input"
						   	type="checkbox"
						   	value="@item.Name"
						   	id="flexCheckDefault"
						   	name="RolSeleccionado" />
								<label class="form-check-label" for="flexCheckDefault">
									@item.Name
								</label>
							</div>
						}
					</div>
				</div>
				<button type="submit" class="btn btn-primary" asp-action="AddUsuarioRol">Adicionar usuario a rol</button>
			</form>

			<form method="post">
				<div class="form-group">
					<label for="NombreRol">Rol</label>
					<input type="text" class="form-control" id="NombreRol" name="Rol" placeholder="Rol a adicionar" required>
				</div>
				<button type="submit" class="btn btn-primary" asp-action="AddRol">Adicionar Rol</button>
			</form>
		</div>

	}
}
